helper__clearfix()
  zoom 1

  &:before
  &:after
    content ''
    display table

  &:after
    clear both

helper__visuallyhidden()
  position absolute
  width 1px
  height 1px
  margin -1px
  border 0
  padding 0
  clip rect(0 0 0 0)
  overflow hidden

helper__valign-children()
  &:before
    content ''
    height 100%
    display inline-block
    vertical-align middle

  & > *
    line-height 0
    vertical-align middle