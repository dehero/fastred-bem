@require color
@require field
@require input

.field
  display flex
  flex-flow row wrap
  margin 0
  margin-bottom $field__margin
  align-items flex-start

.field__label
  padding-right $field__margin
  padding-top $input__padding_v
  padding-bottom $input__padding_v
  min-width 12em
  font-size $input__font-size

.field__value
  padding-top $input__padding_v
  padding-bottom $input__padding_v
  font-size $input__font-size  

.field_size

  &_s
    .field__label
      font-size $input__font-size_s

  &_l
    .field__label
      font-size $input__font-size_l

  &_xl
    .field__label
      font-size $input__font-size_xl

.field_required

  .field__label

    if $field__required-label-mark != ''
      &:after
        content (' ' + $field__required-label-mark)
        color $color_marked

.field__control
  flex-grow 1
  display flex
  flex-flow column nowrap
  align-items flex-start

.field__error
  color $color_marked
  margin-top $field__margin * .5
  margin-bottom 0  

  &:empty
    display none

.field__hint
  color $color_text-muted
  margin-top $field__margin * .5
  margin-bottom 0

.field_vertical

  .field__control
    width 100%