@require color
@require input

$button__bg                             ?= $color_button
$button__bg_pressed                     ?= $color_button-pressed
$button__bg_main                        ?= $color_main
$button__bg_main-pressed                ?= $color_main-pressed

$button__font-size                      ?= 1rem
$button__font-size_s                    ?= .85em
$button__font-size_l                    ?= 1.25em
$button__font-size_xl                   ?= 1.5em

$button__text-color                     ?= black
$button__text-color_pressed             ?= $button__text-color
$button__text-color_main                ?= white
$button__text-color_main-pressed        ?= $button__text-color_main
$button__text-color_plain               ?= inherit
$button__text-color_plain-pressed       ?= inherit
$button__text-color_plain-main          ?= $color_main
$button__text-color_plain-main-pressed  ?= $color_main-pressed

$button__border-color                   ?= $button__bg
$button__border-color_main              ?= $button__bg_main
$button__border-color_pressed           ?= $button__bg_pressed
$button__border-color_main-pressed      ?= $button__bg_main-pressed
$button__border-radius                  ?= $input__border-radius
$button__border-size                    ?= 0

$button__padding_v                      ?= $input__padding_v
$button__padding_h                      ?= $input__padding_h

button__pressed(main = false, plain = false)  
  box-shadow none

  if plain
    border none 
    background none
    if main      
      color $button__text-color_plain-main-pressed
    else
      color $button__text-color_plain-pressed
  else
    if main
      background $button__bg_main-pressed
      color $button__text-color_main-pressed   
      if $button__border-size > 0
        border-color $button__border-color_main-pressed
    else
      background $button__bg_pressed
      color $button__text-color_pressed
      if $button__border-size > 0
        border-color $button__border-color_pressed   